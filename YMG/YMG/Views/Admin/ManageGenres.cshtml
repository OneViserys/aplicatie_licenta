
@{
    ViewBag.Title = "ManageMovies";
}

<div class="panel panel-default">
    <div class="panel-body">
        <h2>Manage genres</h2>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm(actionName: "Create", controllerName: "Genres", method: FormMethod.Get))
        {
            <button class="btn btn-primary">Add new genre</button>
        }
    </div>
    <div class="panel-body">
        <table class="table">

            @foreach (var m in ViewBag.genres)
            {
                <tr>
                    <td>@m.Name</td>
                    <td>
                        @using (Html.BeginForm(actionName: "Details", controllerName: "Genres", method: FormMethod.Get, routeValues: new { id = m.GenreId }))
                        {
                            <button type="submit" class="btn btn-primary">Details</button>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm(actionName: "Edit", controllerName: "Genres", method: FormMethod.Get, routeValues: new { id = m.GenreId }))
                        {
                            <button type="submit" class="btn btn-primary">Edit</button>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm(actionName: "Delete", controllerName: "Genres", method: FormMethod.Post, routeValues: new { id = m.GenreId }))
                        {
                            @Html.HttpMethodOverride(HttpVerbs.Delete)
                            <button type="submit" class="btn btn-danger">Delete</button>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>

</div>

