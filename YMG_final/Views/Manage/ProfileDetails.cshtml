                        break;
                    }
                    <a href="/Movies/Details/@movie.MovieId">@movie.Title</a>
                    <br />
                }
            </div>
            if (nrmov == 4)
            {
                <a href="/Manage/FavouriteMovies">See all your favourite movies here.</a>
            }
        }

    </div>
    <div>
