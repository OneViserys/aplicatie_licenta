@model YMG.Models.ApplicationUser
@{
    ViewBag.Title = "Your profile";
}



<div style="width:100%">
    <div style="width:100%">
        <div style="display: inline-block">
            <h2>@Model.UserName</h2>
            <h5>@Model.FirstName @Model.LastName</h5>
            <br />
            <br />
            <p>Email: @Model.Email</p>
            <div>
                You can manage your profile @Html.ActionLink("here", "Index", "Manage").
            </div>
        </div>
        <div style="display:inline-block; float:right">
            <img src="@Url.Action("UserPhotos", "Home" )" style="width:220px;height:220px; background: #FFFFFF;-moz-border-radius: 30px; padding: 4px; box-shadow: 0px 0px 10px #888;" />
        </div>
    </div>
    <div>
        <label>
            Watchlist:
        </label>
        @if (Model.Watchlist.Count == 0)
        {
            <i>You have not yet added movies to your watchlist.</i>
        }
        else
        {
            var nrmov = 0;
            <div>
                @foreach (var movie in Model.Watchlist)
                {
                    nrmov = nrmov + 1;
                    if (nrmov == 4)
                    {
                        break;
                    }
                    <a href="/Movies/Details/@movie.MovieId">@movie.Title</a>
                    <br />
                }
            </div>
            if (nrmov == 4)
            {
                <a href="/Manage/Watchlist">See your full watchlist here.</a>
            }
        }

    </div>
    <div>
        <label>
            Favourite movies:
        </label>
        @if (Model.FavouriteMovies.Count == 0)
        {
            <i>You have not yet added movies to your favourites.</i>
