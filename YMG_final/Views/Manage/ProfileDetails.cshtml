                        break;
                    }
                    <a href="/Movies/Details/@movie.MovieId">@movie.Title</a>
                    <br />
                }
            </div>
            if (nrmov == 4)
            {
                <a href="/Manage/RatedMovies">Check out all your rated movies here.</a>
            }
        }

    </div>
    <div>
        <label>
            Your reviews:
        </label>
        @if (Model.Reviews.Count == 0)
        {
            <i>You have not written any reviews.</i>
        }
        else
        {
            var nrrev = 0;
            <div>
                @foreach (var review in Model.Reviews)
                {
                    nrrev = nrrev + 1;
                    if (nrrev == 4)
                    {
                        break;
                    }
                    <a href="/Reviews/Details/@review.ReviewId">@review.Title (@review.Movie.Title)</a>
